<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="7.8"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kristiina.solfedzosoftware.LearnRythmsByListening"
    tools:showIn="@layout/activity_learn_rythms_by_listening">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/LearnNotesByListeningQuestion" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:srcCompat="@drawable/left_hand" />

        <ImageView
            android:id="@+id/img_animation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:srcCompat="@drawable/right_hand" />

        <TextView
            android:id="@+id/numbersTextview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:stretchColumns="*"
            android:layout_weight="3.3"
            android:weightSum="3.3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn__ta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_ta"
                    android:gravity="center"
                    android:onClick="onClick_TA"
                    android:text="@string/ta" />

                <Button
                    android:id="@+id/btn__taa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_taa"
                    android:onClick="onClick_TA_A"
                    android:text="@string/ta_a" />

                <Button
                    android:id="@+id/btn__taaa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_taaa"
                    android:onClick="onClick_TA_A_A"
                    android:text="@string/ta_a_a" />

                <Button
                    android:id="@+id/btn__taaaa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_taaaa"
                    android:onClick="onClick_TA_A_A_A"
                    android:text="@string/ta_a_a_a" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn__titi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_titi"
                    android:onClick="onClick_TI_TI"
                    android:text="@string/ti_ti" />

                <Button
                    android:id="@+id/btn__tiri__tiri"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_tiri_tiri"
                    android:onClick="onClick_TIRI_TIRI"
                    android:text="@string/tiri_tiri" />

                <Button
                    android:id="@+id/btn__ti__tiri"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_ti_tiri"
                    android:onClick="onClick_TI_TIRI"
                    android:text="@string/ti_tiri" />

                <Button
                    android:id="@+id/btn__tiri__ti"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_tiri_ti"
                    android:onClick="onClick_TIRI_TI"
                    android:text="@string/tiri_ti" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn__tai__ri"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_tai_ri"
                    android:onClick="onClick_TAI_RI"
                    android:text="@string/tai_ri" />

                <Button
                    android:id="@+id/btn__ta__i__ti"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/piano_white_key"
                    android:drawableLeft="@drawable/ic_ta_i_ti"
                    android:onClick="onClick_TA_I_TI"
                    android:text="@string/ta_i_ti" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/answerTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/playButtonRythms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button_green"
        android:gravity="center"
        android:onClick="onClick_btn_play_rythms"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play_arrow_img" />
    </LinearLayout>

    <TextView
        android:id="@+id/ButtonNextRythms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button_learn_rythms"
        android:gravity="center"
        android:onClick="onClickButtonNext"
        android:text="@string/next_btn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>
