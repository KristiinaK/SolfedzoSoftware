<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kristiina.solfedzosoftware">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OpiNooteActivity"
            android:label="@string/title_activity_opi_noote"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kristiina.solfedzosoftware.MainActivity" />
        </activity>
        <activity
            android:name=".OpiNooteKuulmiseJargiActivity"
            android:label="@string/title_activity_opi_noote_kuulmise_jargi"
            android:parentActivityName=".OpiNooteActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kristiina.solfedzosoftware.OpiNooteActivity" />
        </activity>
        <activity
            android:name=".SeadedActivity"
            android:label="@string/title_activity_seaded"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kristiina.solfedzosoftware.MainActivity" />
        </activity>
    </application>

</manifest>